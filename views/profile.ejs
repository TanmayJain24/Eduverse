<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <title>Eduverse - Profile</title>
    <meta content="width=device-width, initial-scale=1.0" name="viewport">
    <meta content="" name="keywords">
    <meta content="" name="description">

    <!-- Favicon -->
    <link href="/images/favicon.png" rel="icon">

    <!-- Google Web Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Heebo:wght@400;500;600&family=Nunito:wght@600;700;800&display=swap" rel="stylesheet">

    <!-- Icon Font Stylesheet -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.10.0/css/all.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.4.1/font/bootstrap-icons.css" rel="stylesheet">

    <!-- Libraries Stylesheet -->
    <link href="/lib/animate/animate.min.css" rel="stylesheet">
    <link href="/lib/owlcarousel/assets/owl.carousel.min.css" rel="stylesheet">

    <!-- Customized Bootstrap Stylesheet -->
    <link href="/stylesheets/bootstrap.min.css" rel="stylesheet">

    <!-- Template Stylesheet -->
    <link href="/stylesheets/style.css" rel="stylesheet">
</head>
<body>
    <!-- Navbar Start -->
    <nav class="navbar navbar-expand-lg bg-light navbar-light shadow sticky-top p-0">
        <a href="/index" class="navbar-brand d-flex align-items-center px-4 px-lg-5">
            <h2 class="m-0 text-primary"><i class="fa fa-book me-3"></i>Eduverse</h2>
        </a>
        <button type="button" class="navbar-toggler me-4" data-bs-toggle="collapse" data-bs-target="#navbarCollapse">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarCollapse">
            <div class="navbar-nav ms-auto p-4 p-lg-0">
                <% if (user) { %>
                    <span class="nav-item nav-link">Hi, <%= user.username %></span>
                    <a href="/index" class="nav-item nav-link">Home</a>
                    <a href="/about" class="nav-item nav-link">About</a>
                    <a href="/courses" class="nav-item nav-link">Courses</a>
                    <a href="/profile" class="nav-item nav-link">Profile</a>
                    <a href="/contact" class="nav-item nav-link">Contact</a>
                    <!-- Keep logout button within the same nav but aligned to the end -->
                    <form action="/logout" method="GET" class="d-inline">
                        <button type="submit" class="btn btn-outline-danger" style="border-radius: 20px; margin: 15px; margin-left: 0px;">Logout</button>
                    </form> 
                <% } else { %>
                    <a href="/index" class="nav-item nav-link">Home</a>
                    <a href="/about" class="nav-item nav-link">About</a>
                    <a href="/courses" class="nav-item nav-link">Courses</a>
                    <a href="/contact" class="nav-item nav-link">Contact</a>
                <% } %>
            </div>
        </div>
    </nav>
    <!-- Navbar End -->

    <!-- Profile Start -->
    <div class="container -xxl py-5">
        <div class="text-center wow fadeInUp" data-wow-delay="0.1s">
        <h6 class="section-title bg-white text-center text-primary px-3" style="font-size: 20px">Profile</h6>
        </div>
    </div>
    
    <!-- Profile End -->

    <!-- Profile Details Start -->
    <div class="container-xxl py-5">
        <div class="container">
            <div class="row g-5 wow fadeInUp" data-wow-delay="0.3s">
                <!-- Profile Photo and Name Section -->
                <div class="col-lg-3 d-flex align-items-center">
                    <div class="text-center">
                        <img src="/images/uploads/<%= user.dp %>" class="rounded-circle mb-4 profile-img" alt="ProfileImage">
                        <h4 class="mb-3 text-primary uppercase-title" style="font-size: 25px;"><%= user.fullname %></h4>
                    </div>
                </div>
                <!-- User Information Section -->
                <div class="col-lg-9">
                    <div class="bg-light rounded p-5">
                        <p><strong class="text-primary">Username:</strong> @<%= user.username %></p>
                        <p><strong class="text-primary">Email:</strong> <%= user.email %></p>
                        <p><strong class="text-primary">Date of Birth:</strong> <%= new Date(user.dob).toLocaleDateString() %></p>   
                        <p><strong class="text-primary">Gender:</strong> <%= user.gender %></p>
                    </div>
                </div>
            </div>
            <div class="row g-4 mt-5 wow fadeInUp" data-wow-delay="0.9s">
                <!-- My Courses Section -->
                <div class="col-12">
                    <div class="bg-light rounded p-5">
                        <h4 class="mb-4 text-primary">My Courses</h4>
                        <div class="row g-4">
                            <% user.courses.forEach(course => { %>
                                <div class="col-lg-4 col-md-6">
                                    <div class="course-item bg-light rounded">
                                        <div class="position-relative overflow-hidden">
                                            <img src="/images/uploads/<%= course.image %>" class="img-fluid rounded-top" alt="<%= course.name %>" style="height: 200px; object-fit: cover;">
                                        </div>
                                        <div class="text-start p-4">
                                            <h5><%= course.name %></h5>
                                            <p>â‚¹<%= course.price %></p>
                                        </div>
                                    </div>
                                </div>
                            <% }) %>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Profile Details End -->

    <!-- JavaScript Libraries -->
    <script src="https://code.jquery.com/jquery-3.4.1.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="/lib/wow/wow.min.js"></script>
    <script src="/lib/easing/easing.min.js"></script>
    <script src="/lib/waypoints/waypoints.min.js"></script>
    <script src="/lib/owlcarousel/owl.carousel.min.js"></script>

    <!-- Template Javascript -->
    <script src="/javascripts/main.js"></script>
</body>
</html>